{
    "name": "microbit-dal",
    "version": "2.0.0-rc4.build2",
    "keywords": "microbit, framework, bbc",
    "description": "The core set of drivers, mechanisms and types that make up the micro:bit runtime.",
    "authors": {
        "name": "Lancaster University",
        "url": "https://github.com/lancaster-university"
    },
    "repository":
    {
        "type": "git",
        "url": "https://github.com/palfrey/microbit-dal.git",
        "branch": "platformio-3.0"
    },
    "dependencies": {
        "ble": "lancaster-university/BLE_API#v2.5.0+mb3",
        "ble-nrf51822": "lancaster-university/nrf51822#v2.5.0+mb6",
        "nrf51-sdk": "palfrey/nrf51-sdk#platformio-3.0"
    },
    "build":
    {
      "flags": [
        "-Iinc/core",
        "-Iinc/types",
        "-Iinc/drivers",
        "-Iinc/bluetooth",
        "-Iinc/platform",
        "-Dp4=P4",
        "-Dp13=P13"
      ],
      "extraScript": "platformio_extra.py"
    },
    "url": "https://github.com/lancaster-university/microbit-dal",
    "frameworks": "mbed",
    "platforms": "nordicnrf51"
}
